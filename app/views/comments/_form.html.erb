<%= form_for([@resource, @comment]) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>



  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    
     <%= form.hidden_field :parent_id, value: comment.parent_id %>
     
  </div>
  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
